# Staging Frontend Environment Configuration

# Backend API Configuration
REACT_APP_API_BASE_URL=https://staging-api.yourcompany.com/api

# App Configuration
REACT_APP_NAME=HRMS Staging
REACT_APP_VERSION=1.0.0-staging
REACT_APP_ENVIRONMENT=staging

# Security Configuration
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_DEBUG_MODE=true

# Performance Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=true
IMAGE_INLINE_SIZE_LIMIT=8192

# Build Configuration
BUILD_PATH=build
PUBLIC_URL=https://staging-hrms.yourcompany.com/
REACT_APP_PUBLIC_URL=https://staging-hrms.yourcompany.com/

# Analytics & Monitoring
REACT_APP_ANALYTICS_ID=GA-STAGING-XXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_MAX_FILE_SIZE=8388608

# CDN Configuration
REACT_APP_CDN_URL=https://staging-cdn.yourcompany.com/hrms/

# API Configuration
REACT_APP_API_TIMEOUT=45000
REACT_APP_REQUEST_RETRY_COUNT=5
# Testing Configuration
REACT_APP_ENABLE_TEST_FEATURES=true
REACT_APP_MOCK_API_DELAY=1000
