# Frontend Development Environment Configuration
# Backend API Configuration
REACT_APP_API_BASE_URL=http://localhost:5003/api
REACT_APP_API_URL=http://localhost:5003

# App Configuration
REACT_APP_NAME=HRMS Application
REACT_APP_VERSION=1.0.0-dev

# Development-specific settings
REACT_APP_ENV=development
REACT_APP_DEBUG_MODE=true

# Enable development tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Development API settings
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENABLE_MOCK_DATA=false

# Development build settings
GENERATE_SOURCEMAP=true
FAST_REFRESH=true
BUILD_PATH=build
PUBLIC_URL=/
REACT_APP_BUILD_VERSION=dev-build
