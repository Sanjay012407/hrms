# HRMS Backend Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in your values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Server Configuration
PORT=5004
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=24h

# Email Configuration (SMTP) - REQUIRED FOR SIGNUP & NOTIFICATIONS
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=HRMS System <your-email@gmail.com>

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-secure-session-secret-minimum-32-characters

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Frontend & Email Links - REQUIRED FOR EMAIL VERIFICATION
FRONTEND_URL=http://localhost:3000
API_PUBLIC_URL=http://localhost:5004
SUPER_ADMIN_EMAIL=admin@yourdomain.com

# Development Testing
ENABLE_TEST_ROUTES=true
MOCK_EMAIL_SENDING=false
ENABLE_API_DOCS=true
DEBUG_MODE=true
ENABLE_DETAILED_LOGGING=true
LOG_LEVEL=debug

# Database Settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Security (Adjust for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Hot Reload Support (Development only)
ENABLE_HOT_RELOAD=true
WATCH_FILES=true

# =====================================================
# IMPORTANT SETUP INSTRUCTIONS:
# =====================================================
#
# 1. EMAIL CONFIGURATION (Gmail):
#    - Go to Google Account Security Settings
#    - Enable 2-Factor Authentication
#    - Generate App Password: https://myaccount.google.com/apppasswords
#    - Use the 16-character app password as EMAIL_PASS
#
# 2. MONGODB:
#    - Create cluster at mongodb.com
#    - Add IP whitelist (0.0.0.0/0 for dev)
#    - Create database user with readWrite permissions
#    - Copy connection string to MONGODB_URI
#
# 3. FRONTEND_URL:
#    - Set to your frontend URL (http://localhost:3000 for dev)
#    - Used in email verification links
#
# 4. SUPER_ADMIN_EMAIL:
#    - Email that receives admin signup approval requests
#    - Should be your primary admin email
#
# =====================================================
